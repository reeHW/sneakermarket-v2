<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sneakermarket.domain.comment.CommentMapper">

    <!-- tb_comment 테이블 전체 컬럼 -->
    <sql id="commentColumns">
        id
        , post_id
        , content
        , writer
        , delete_yn
        , created_date
    </sql>


    <!-- 댓글 리스트 조회 -->
    <select id="findAll" parameterType="com.sneakermarket.domain.comment.CommentSearchDto" resultType="com.sneakermarket.domain.comment.CommentDto$Response">
        SELECT
            <include refid="commentColumns" />
        FROM
            comment
        WHERE
        delete_yn = 0
        AND post_id = #{postId}
        ORDER BY
        id DESC
        LIMIT #{pagination.limitStart}, #{recordSize}
    </select>

    <!-- 댓글 수 카운팅 -->
    <select id="count" parameterType="com.sneakermarket.domain.comment.CommentSearchDto" resultType="int">
        SELECT
            COUNT(*)
        FROM
            comment
        WHERE
            delete_yn = 0
            AND post_id = #{postId}
    </select>
</mapper>